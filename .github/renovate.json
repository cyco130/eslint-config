{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended", "schedule:weekly", "group:allNonMajor"],
	"labels": ["dependencies"],
	"rangeStrategy": "bump",
	"packageRules": [
		{
			"matchManagers": ["github-actions"],
			"rangeStrategy": "replace"
		},
		{
			"matchDepTypes": ["peerDependencies"],
			"enabled": false
		}
	],
	"ignoreDeps": []
}
